<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<MenuBar prefHeight="33.0" prefWidth="600.0" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.fakturownia.modfx.controller.TopMenuController">
    <menus>
        <Menu mnemonicParsing="false" text="Plik">
            <items>
                <MenuItem fx:id="closeButton" mnemonicParsing="false" onAction="#closeButtonAction" text="Zamknij" />
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Wystaw dokument">
            <items>
                <MenuItem fx:id="simpleInvoice" mnemonicParsing="false" onAction="#switchToSimpleInvoice" text="Faktura" />
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Pomoc">
            <items>
                <MenuItem fx:id="appInfo" mnemonicParsing="false" onAction="#switchToAppInfo" text="Informacje o aplikacji" />
            </items>
        </Menu>
    </menus>
    <BorderPane.margin>
        <Insets />
    </BorderPane.margin>
</MenuBar>
